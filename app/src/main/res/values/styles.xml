<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="title">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:textColor">#f00</item>
    </style>

    <style name="langRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="langCommon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="langCol_01" parent="@style/langCommon">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="langCol_02" parent="@style/langCommon">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="langCol_03" parent="@style/langCommon">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="langCol_04" parent="@style/langCommon">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="langCol_05" parent="@style/langCommon">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="langCol_06" parent="@style/langCommon">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="langCol_07" parent="@style/langCommon">
        <item name="android:textSize">16sp</item>
    </style>

</resources>







